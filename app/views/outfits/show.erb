<div class="container">
  <div class="row i-am-centered top-buffer">
      <div class="jumbotron">
        <h3 class="display-4"><%=@outfit.name.capitalize%></h3>
        <% @outfit.items.each do |item| %>
          <ul class="list-group">
          <li class="list-group-item"><a href="/items/<%=item.slug%>"><%=item.name%></a></li>
        </ul>
        <%end%>
        <a class="link-button btn btn-info btn-block link-button top-buffer-xs" href="/outfits/<%=@outfit.slug%>/edit">Edit Outfit</a>
        <div>
          <form class="top-buffer-xs" method="post" action="/outfits/<%=@outfit.slug%>/delete">
          <input  id="hidden" type="hidden" name="_method" value="DELETE">
          <input type="submit" class="btn btn-outline-info btn-block" value="Delete Outfit"></input>
          </form>
        </div>
      </div>
  </div>
</div>
