<div class="container">
  <div class="row i-am-centered top-buffer">
    <div class="jumbotron">
        <h2 class="display-4">Edit Outfit</h2>
        <div class="">
          <form action="/outfits/<%=@outfit.slug%>" method="POST">
          <input type="hidden" name="_method" value="PATCH">

            <lable>Change Name</label>
              <input type="text" name="outfit[name]" value ="<%=@outfit.name%>"><br></br>
          <div class="">
            <lable><h4>Remove Items</h4></label>
              <% @outfit.items.each do |item| %>
                <input type="checkbox" name="outfit[delete_items][]" value="<%= item.id %>">
                <label><%= item.name %>, <%=item.category%></label><br>
              <% end %>
          </div>
          <div class="top-buffer-xs">
            <label><h4>Add Items</h4></label> <a href="/items/new">Add New item</a> <br>

              <% @user.items.all.each do |item| %>
                <input type="checkbox" name="outfit[add_items][]" value="<%= item.id %>">
                <label><%= item.name %>, <%=item.category%></label><br>
              <% end %>
          </div>
            <input type="submit" value="Edit Outfit">
          </form>
        </div>
    </div>
  </div>
</div>
