<div  class="container">
  <div class="row i-am-centered top-buffer">
      <div class="jumbotron">
        <h2 class="display-4">MyOutfits</h2>
        <p>Choose an Outfit:</p>
        <%if @outfits.size == 0%>
          <p>You have no outfits to show, click below to create your first outfit</p>
        <% else %>
          <%@outfits.each do |outfit|%>
          <ul class="list-group">
            <li class="list-group-item"><a href="/outfits/<%=outfit.slug%>"><%=outfit.name.capitalize%></a></li>
          </ul>
          <%end%>
         <% end %>
         <p class="top-buffer-xs"></p>
         <p class="btn btn-info btn-block link-button"> <a class="link-button" href="/outfits/new">Create New Outfit</a></p>
      </div>
  </div>
</div>
