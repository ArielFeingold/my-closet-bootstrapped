<div  class="container">
  <div class="row i-am-centered top-buffer">
      <div class="jumbotron">
        <h2 class="display-4">Your Items</h2>
        <%if @items.size == 0%>
          <p>No Outfits to show. Click <a href="/items/new">HERE</a> to create your first item</p>
        <% else %>
        <%@categories.each do |c|%>
            <h3 class="top-buffer-xs"><%=c.capitalize%></h3>
            <%items = @items.find_all{|item| item.category == c}%>
            <%items.each do |i|%>
              <li class="top-buffer-xs"><a href="/items/<%=i.slug%>"><%=i.name.capitalize%></a> </li>
            <% end %>
          <% end %>
        <% end %>
         <p class="top-buffer-xs"></p>
         <p class="btn btn-info btn-block "> <a class="link-button" href="/items/new">Create a New Item</a></p>
      </div>
  </div>
</div>
